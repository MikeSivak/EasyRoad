<link href="/css/adsSearchField.css" rel="stylesheet">

    <form style="width:90%; margin: 0 auto;">
        <div class="form-row" id="search_form">
            <div class="form-group col-md-2" id="div_city">
                <input type="text" class="form-control" id="city" onchange="checkBaseFields()" name="city" placeholder="Город">
            </div>
            <div class="form-group col-md-3" id="div_dep_addr">
                <input type="text" class="form-control" id="dep_addr" onchange="checkBaseFields()" name="dep_addr" placeholder="Адрес отправления">
            </div>
            <div class="form-group col-md-3" id="div_arr_addr">
                <input type="text" class="form-control" id="arr_addr" onchange="checkBaseFields()" name="arr_addr" placeholder="Адрес прибытия">
            </div>
            <div class="form-group col-md-3" id="div_date">
                <input type="date" class="form-control" id="dep_date" onchange="checkBaseFields()" name="dep_date" placeholder="Дата">
            </div>
            <div class="form-group col-md-1" style="text-align: center;">
                {{!-- Button for wide screen >=768px --}}
                <button type="submit" id="search_btn" style="height: 50px;" class="btn btn-primary">Поиск</button>
            </div>
        </div>
    </form>